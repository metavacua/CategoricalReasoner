@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix catty: <http://catty.ai/ontology#> .

# SHACL Shapes for Catty Categorical Schema Validation

# Category Shape
catty:CategoryShape
    a sh:NodeShape ;
    sh:targetClass catty:Category ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Category must have at least one rdfs:label" ;
    ] ;
    sh:property [
        sh:path rdfs:comment ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Category must have at least one rdfs:comment" ;
    ] .

# Object Shape
catty:ObjectShape
    a sh:NodeShape ;
    sh:targetClass catty:Object ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Object must have at least one rdfs:label" ;
    ] ;
    sh:property [
        sh:path rdfs:comment ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Object must have at least one rdfs:comment" ;
    ] .

# Morphism Shape
catty:MorphismShape
    a sh:NodeShape ;
    sh:targetClass catty:Morphism ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Morphism must have at least one rdfs:label" ;
    ] ;
    sh:property [
        sh:path rdfs:comment ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Morphism must have at least one rdfs:comment" ;
    ] ;
    sh:property [
        sh:path catty:domain ;
        sh:minCount 1 ;
        sh:message "Morphism must have a domain" ;
    ] ;
    sh:property [
        sh:path catty:codomain ;
        sh:minCount 1 ;
        sh:message "Morphism must have a codomain" ;
    ] .

# Logic Shape
catty:LogicShape
    a sh:NodeShape ;
    sh:targetClass catty:Logic ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Logic must have at least one rdfs:label" ;
    ] ;
    sh:property [
        sh:path rdfs:comment ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Logic must have at least one rdfs:comment" ;
    ] .

# Functor Shape
catty:FunctorShape
    a sh:NodeShape ;
    sh:targetClass catty:Functor ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Functor must have at least one rdfs:label" ;
    ] ;
    sh:property [
        sh:path catty:domain ;
        sh:minCount 1 ;
        sh:message "Functor must have a domain category" ;
    ] ;
    sh:property [
        sh:path catty:codomain ;
        sh:minCount 1 ;
        sh:message "Functor must have a codomain category" ;
    ] .
