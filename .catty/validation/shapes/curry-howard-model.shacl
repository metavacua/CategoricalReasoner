@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix catty: <http://catty.ai/ontology#> .

# SHACL Shapes for Curry-Howard Categorical Model Validation

# Curry-Howard Equivalence Shape
catty:CurryHowardEquivalenceShape
    a sh:NodeShape ;
    sh:targetClass catty:CurryHowardEquivalence ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "CurryHowardEquivalence must have rdfs:label" ;
    ] ;
    sh:property [
        sh:path catty:logicSource ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class catty:Logic ;
        sh:message "CurryHowardEquivalence must have exactly one logicSource" ;
    ] ;
    sh:property [
        sh:path catty:typeTheoryTarget ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class catty:TypeTheory ;
        sh:message "CurryHowardEquivalence must have exactly one typeTheoryTarget" ;
    ] ;
    sh:property [
        sh:path catty:functor ;
        sh:minCount 1 ;
        sh:class catty:Functor ;
        sh:message "CurryHowardEquivalence must have at least one functor" ;
    ] .

# Logic as Category Shape
catty:LogicAsCategoryShape
    a sh:NodeShape ;
    sh:targetClass catty:LogicAsCategory ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path catty:baseLogic ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class catty:Logic ;
        sh:message "LogicAsCategory must reference a base Logic" ;
    ] .

# Type Theory as Category Shape
catty:TypeTheoryAsCategoryShape
    a sh:NodeShape ;
    sh:targetClass catty:TypeTheoryAsCategory ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path catty:baseTypeTheory ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class catty:TypeTheory ;
        sh:message "TypeTheoryAsCategory must reference a base TypeTheory" ;
    ] .
